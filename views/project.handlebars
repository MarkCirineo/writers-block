<section class="container-fluid">
    <div class="row " id="projectHome">
        <div class="col-sm-12 col-md-3" id="outline">
            <h2>Outline</h2>


        </div>
        <div class="col-sm-12 col-md-6" id="paper" >
            
            <h2 id="title" style="margin-top: 0%; text-align:center">Title<input type="text" id="paperTitle"value="{{projectData.dataValues.title}}" ></h2>
            <h3 id="thesis">Thesis</h3>
                <input type="text" id="paperThesis"value="{{projectData.dataValues.thesis}}" >
            
            <div id="topicSentences">
                {{#each topics as |ts|}}
                    
                <h3 class="ts">Topic Sentence</h3>
                    <input class="topic"type="text" value="{{ts.sentence}}"id={{ts.id}} >
                 {{/each}}
            </div>

            <div id="worksCited">
                {{#each works as |work|}}

                <h2 class="wc">Works Cited</h2>
                <input class="works" type="text" value="{{work.author_first}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.author_last}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.title}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.ver_ed}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.publisher}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.publication_date}}"id="{{work.id}}">
                <input class="works" type="text" value="{{work.location}}"id="{{work.id}}">
                

                {{/each}}

            </div>

        </div>
        <div class="col-sm-12 col-md-3" id="additional">
            <h2>Related Content</h2> 


        </div>
    </div>



<script src="/js/project.js"></script>
